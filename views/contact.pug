extends base.pug

block style
  style
    include ../static/style.css
    include ../static/Contactstyle.css

block content

  section
    div.cont
      h1 Contact Us
      form(action="/contact", method="post",id="cntctform")
        input(type="text",class="myInput",name="name",placeholder="Enter your name")
        input(type="number",class="myInput",name="age",placeholder="Enter your age")
        input(type="textarea",class="myInput",name="adress",placeholder="Enter your address")
        input(type="phone",class="myInput",name="phone",placeholder="Enter your phone no")
        button.btn(type='submit') Submit


block script
    script(src="../static/homescript.js")
    script(src="../static/contactscript.js")
        